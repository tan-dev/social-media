<style>
    .flex{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .circleImg{
        width: 100px;
        height: 100px;
        border-radius: 50%;
        overflow: hidden;
    }
    .circleImg img{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .flex small{
        color: rgb(75, 195, 250);
        text-transform: capitalize;
        cursor: pointer;
    }
</style>

<% include ./partials/header.ejs %>
    <div class="pt-5 mt-4 container">
        <div class="flex mt-3 mb-3 container">
            <div class="circleImg">
                <img src=<%= userFound.profilePic %> alt="">
            </div>
            <h5 class="mt-3"><%= userFound.name %></h5>
            <small id="fileClick">change profile pic</small>
            <form class="d-none" method="POST" action="/uploadpic" enctype="multipart/form-data">
                <input type="file" name="prfl">
                <input type="submit">
            </form>            
        </div>
        <form id="regForm" method="POST" action="/update">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputname">Name</label>
                    <input type="text" name="name" class="form-control" id="inputname" placeholder="Name" value=<%= userFound.name %>>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputusername">Username</label>
                    <input type="text" name="username" class="form-control" id="inputusername" placeholder="Username" value=<%= userFound.username %>>
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">Something About You ðŸŽ­</label>
                <textarea name="about" class="form-control" id="exampleFormControlTextarea1" rows="3"
                    placeholder="What you're good at, ambitions, about you..."><%= userFound.about %></textarea>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputCity">City</label>
                    <input type="text" name="city" class="form-control" id="inputCity" value=<%= userFound.city %>>
                </div>
            </div>
            <button type="submit" class="btn btn-warning">Update Details</button>
        </form>
    </div>

    <script>
        document.querySelector('#fileClick').addEventListener('click', function(){
            document.querySelector('input[type="file"]').click();
        })
        document.querySelector('input[type="file"]').onchange = function(){
            document.querySelector('input[type="submit"]').click();
        }
    </script>

<% include ./partials/footer.ejs %>