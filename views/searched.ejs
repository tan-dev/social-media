<style>
    .post {
        position: relative;
        width: 100%;
        min-height: 60px;
        background-color: white;
        border-radius: 4px;
        padding: 10px 10px 10px 10px;
        margin-bottom: 40px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.062), 0 3px 6px rgba(0, 0, 0, 0.123);
    }

    .postTop {
        display: flex;
        align-items: center;
        width: 100%;
        min-height: 0px;
        /* background-color: red; */
    }

    .postDetails {
        margin-left: 10px;
    }

    .postDetails h6 {
        margin-bottom: 0px;
        color: rgb(75, 75, 75);
    }

    .post>p {
        /* padding: 0 20px; */
        font-size: 13px;
        margin-top: 10px;
    }

    .usrPrfl {
        overflow: hidden;
        width: 40px;
        height: 40px;
        border-radius: 50%;
    }
    .usrPrfl img{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>

<% include ./partials/header.ejs %>
<div class="container">
    <h3 class="mt-4">Results of Users</h3>
    <hr>
    <% users.forEach(function(elem){ %>
        <div class="post">
            <div class="postTop">
                <div class="usrPrfl">
                    <img class="prflpic" src=<%= elem.profilePic %> alt="">
                </div>
                <div class="postDetails">
                    <a href=<%= '/profile/'+elem.username %>><%= elem.name %></a>
                    <small><%= elem.city %></small>
                </div>
            </div>
            <p><%= elem.about %></p>
        </div>
    <% }) %>
</div>
<% include ./partials/footer.ejs %>